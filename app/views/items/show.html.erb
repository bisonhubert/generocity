<p id="notice"><%= notice %></p>

<div class="pantry-item-show">
  <div class="container marketing">
    <h2><%=@item.name%></h2>

  <div class="row">
    <div class="col-lg-4">
      <img src="<%=@item.image%>" alt="<%=@item.name%>" width="200" height="200">
      <p>$<%= @item.price %></p>
      <%if signed_in?%>
        <form id="item_quantity" method="post" action='add/<%=@item.id%>' >
          Quantity:
          <input type="number" name="quantity" min="1" max="10" value="1">
          <input type="button" class="button" value="Add to Cart">
        </form>
      <%end%><br>
      <%= link_to 'Back to Pantry', items_path %><br><br><br>
    </div>
  </div>
</div>