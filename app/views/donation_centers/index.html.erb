<p id="notice"><%= notice %></p>

<h1>Listing Donation Centers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zip</th>
      <th>Phone number</th>
      <th>Website</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donation_centers.each do |donation_center| %>
      <tr>
        <td><%= donation_center.name %></td>
        <td><%= donation_center.address %></td>
        <td><%= donation_center.zip %></td>
        <td><%= donation_center.phone_number %></td>
        <td><%= link_to donation_center.name,  donation_center.website %></td>
        <td><%= donation_center.district %></td>
        <td><%= link_to 'Show', donation_center %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation center', new_donation_center_path %>
